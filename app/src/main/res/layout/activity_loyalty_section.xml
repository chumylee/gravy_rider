    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/promoCodeHolder">

        <EditText
            android:id="@+id/promoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="Enter Promo Code"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submitPromoCode"
        style="?android:textAppearanceSmall"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="APPLY"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:background="#7DC24F"
        android:layout_alignBottom="@+id/promoCodeHolder"
        android:layout_toRightOf="@+id/promoCodeHolder"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--android:background="#F2F2F2" -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promoCodeHolder"
        android:layout_alignRight="@+id/submitPromoCode"
        android:layout_alignEnd="@+id/submitPromoCode"
        android:layout_marginTop="20dp"
        android:background="#FBFBE3"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="10dp"
            android:text="YOUR INVITE CODE"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="chumylee247"
            android:id="@+id/inviteCode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Click here to invite friends to Gravy and you'll score credit when they take their first ride."
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/textView6"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/firstlayout"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Expires : 2016-07-29"
            android:layout_marginTop="8dp"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="7dp"
            android:text="GIVEN BY DRIVER"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="7dp"
            android:layout_marginTop="16dp"
            android:textColor="#7DC24F"
            android:text="₦2000"
            android:id="@+id/textView8"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstlayout"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Expires : 2016-07-29"
            android:id="@+id/pickup_address"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="5dp"
            android:text="GIVEN BY DRIVER"
            android:id="@+id/textView10"
            android:layout_below="@+id/pickup_address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#7DC24F"
            android:text="₦2000"
            android:id="@+id/driver_name"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
